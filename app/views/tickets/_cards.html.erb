              <p><%= ticket.created_at.strftime("%d of %B, %Y at %k:%M") %></p>
            </div>
          </div>
        </div>
      <% end %>
    <%= render :partial => 'modal', locals: { ticket: ticket } %>
    <% end %>
  </div>
  <div class="completed-tickets mt-5 mb-5">
    <h3 class="status-title">ğŸ™Œ Completed</h3>
